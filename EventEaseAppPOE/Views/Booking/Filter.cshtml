@model BookingFilterViewModel

<form asp-action="Filter" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <select asp-for="SelectedEventType" class="form-control" asp-items="@(new SelectList(Model.EventTypes))">
                <option value="">-- All Event Types --</option>
            </select>
        </div>

        <div class="col-md-3">
            <input asp-for="StartDate" type="date" class="form-control" placeholder="From" />
        </div>

        <div class="col-md-3">
            <input asp-for="EndDate" type="date" class="form-control" placeholder="To" />
        </div>
         
        <div class="col-md-2">
            <select asp-for="VenueAvailable" class="form-control">
                <option value="">-- Venue Availability --</option>
                <option value="true">Available</option>
                <option value="false">Not Available</option>
            </select>
        </div>

        <div class="col-md-1">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

@if (Model.FilteredBookings != null && Model.FilteredBookings.Any())
{
<div class="row">
    @foreach (var booking in Model.FilteredBookings)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(booking.Venue?.VenueImage ?? "/images/default-venue.jpg")"
                     class="card-img-top"
                     alt="Venue image"
                     style="height: 200px; object-fit: cover;" />

                <div class="card-body">
                    <h5 class="card-title">@booking.Event?.EventName</h5>
                    <p class="card-text">
                        <strong>Date:</strong> @booking.BookingDate.ToString("yyyy/MM/dd")<br />
                        <strong>Type:</strong> @booking.Event?.EventType?.EventTypeName<br />
                        <strong>Venue:</strong> @booking.Venue?.VenueName <br />
                        <strong>Available:</strong> @(booking.Venue?.IsAvailable == true ? "Yes" : "No")
                    </p>
                </div>
            </div>
        </div>
    }
</div>
}
else
{
    <div class="alert alert-warning">No bookings found matching the filter criteria.</div>
}