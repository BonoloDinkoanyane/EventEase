@model IEnumerable<EventEaseAppPOE.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1 class="mb-4">Your Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Booking</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Search by Booking ID or Event Name" value="@Context.Request.Query["search"]" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

<div class="row">
@foreach (var item in Model) {
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Event.EventName)</h5>
                <h6 class="card-subtitle mb-3 text-muted">
                    <i class="bi bi-geo-alt-fill"></i> @Html.DisplayFor(modelItem => item.Venue.VenueName)
                </h6>
                
                <p class="card-text">
                    <strong>Booking Date:</strong> @item.BookingDate.ToString("D")
                </p>

                <div class="mt-auto text-center pt-3">
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
</div>

