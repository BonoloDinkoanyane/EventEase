@model IEnumerable<EventEaseAppPOE.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Event</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.EventName)</h5>

                    <h6 class="card-subtitle mb-2 text-muted">
                        Date: @item.EventDate.ToString("dd MMMM yyyy")
                    </h6>

                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>

                    <p class="card-text">
                        <small class="text-muted">
                            Event Type: @Html.DisplayFor(modelItem => item.EventType.EventTypeId)
                        </small>
                    </p>

                    <div class="mt-auto text-center">
                        <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.EventId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>