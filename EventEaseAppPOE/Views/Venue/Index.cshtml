@model IEnumerable<EventEaseAppPOE.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h2 class="mb-4">Venues</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Add New Venue</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">No venues available.</div>
}

<div class="row">
    @foreach (var venue in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@venue.VenueImage" class="card-img-top" alt="Venue " style="height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <h5 class="card-title">@venue.VenueName</h5>
                    <p class="card-text">
                        <strong>Location:</strong> @venue.Location<br />
                        <strong>Capacity:</strong> @venue.Capacity
                    </p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-sm btn-outline-primary">View</a>
                        <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
